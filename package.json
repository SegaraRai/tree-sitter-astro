{
  "name": "tree-sitter-astro",
  "version": "0.0.1",
  "type": "module",
  "description": "Astro grammar for tree-sitter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virchau13/tree-sitter-astro.git"
  },
  "license": "MIT",
  "author": "virchau13",
  "bugs": {
    "url": "https://github.com/virchau13/tree-sitter-astro/issues"
  },
  "homepage": "https://github.com/virchau13/tree-sitter-astro#readme",
  "main": "bindings/node/index.js",
  "types": "bindings/node/index.d.ts",
  "exports": {
    ".": {
      "import": "./bindings/node/index.js",
      "types": "./bindings/node/index.d.ts"
    },
    "./wasm": "./tree-sitter-astro.wasm",
    "./package.json": "./package.json"
  },
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "astro"
  ],
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.2.2",
    "node-gyp-build": "^4.8.2",
    "tree-sitter-html": "^0.23.2"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-treesitter": "^1.0.2",
    "tree-sitter-cli": "^0.26.3"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.0 || ^0.25.0"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js"
  },
  "tree-sitter": [
    {
      "scope": "source.astro",
      "file-types": [
        "astro"
      ]
    }
  ]
}
